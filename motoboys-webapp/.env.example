# Infra
DATABASE_URL=postgresql+psycopg://postgres:postgres@localhost:5432/motoboys
TZ=America/Fortaleza

# CORS (opcional, recomendado configurar explicitamente)
# Dev (frontend local + API local):
# CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
# Produção (somente domínios confiáveis):
# CORS_ORIGINS=https://app.seudominio.com
CORS_ORIGINS=

# Seed (opcional)
# WEEKLY_COURIERS_JSON_PATH=data/entregadores_semanais.json
# Desktop/local files (opcional)
# USER_DATA_DIR=%LOCALAPPDATA%\MotoboysWebApp
# LOG_DIR=%LOCALAPPDATA%\MotoboysWebApp\logs


# Ambiente
APP_ENV=dev   # dev | prod
APP_MODE=server   # server | desktop
# APP_DATA_DIR=   # opcional no desktop (fallback: %APPDATA%/Motoboys ou ~/.local/share/Motoboys)

# UI/Auth (P3/P4)
SESSION_SECRET=dev-secret-change-me
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin

# P4: perfil CAIXA
CASHIER_USERNAME=caixa
CASHIER_PASSWORD=caixa
